{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "build",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["styled-components"],
    "lib": ["ES2015", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  }
}